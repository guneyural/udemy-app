<% layout('/layouts/boilerplate') -%>
<div class="row">
  <h1 class="text-center">Edit Campground</h1>
  <div class="col-6 offset-3">
    <form
      action="/campgrounds/<%=campground._id%>/edit?_method=PUT"
      method="POST"
      novalidate
      class="validated-form"
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label for="title" class="form-label">Title: </label>
        <input
          type="text"
          id="title"
          placeholder="Title"
          name="campground[title]"
          class="form-control"
          value="<%=campground.title%>"
          required
        />
        <div class="valid-feedback">Ok</div>
      </div>
      <div class="mb-3">
        <label for="image" class="form-label">Image: </label>
        <input type="file" name="image" id="image" multiple />
        <div class="valid-feedback">Ok</div>
      </div>
      <div class="mb-3">
        <label for="title" class="form-label">Location: </label>
        <input
          type="text"
          id="location"
          placeholder="Location"
          class="form-control"
          name="campground[location]"
          value="<%=campground.location%>"
          required
        />
        <div class="valid-feedback">Ok</div>
      </div>
      <div class="mb-3">
        <label for="price" class="form-label">Price: </label>
        <div class="input-group">
          <span class="input-group-text">$</span>
          <input
            type="text"
            class="form-control"
            id="price"
            placeholder="0.00"
            name="campground[price]"
            value="<%=campground.price%>"
            required
          />
          <div class="valid-feedback">Ok</div>
        </div>
      </div>
      <div class="mb-3">
        <label for="description" class="form-label">Description: </label>
        <textarea
          type="text"
          id="description"
          placeholder="Write Some Description..."
          class="form-control"
          name="campground[description]"
          required
        >
<%=campground.description%></textarea
        >campgroundSchema
        <div class="valid-feedback">Ok</div>
      </div>
      <div class="mb-3">
        <% campground.image.forEach((img, idx)=> { %>
        <img
          src="<%= img.thumbnail %>"
          class="border"
          style="object-fit: cover; height: 100px; width: 150px"
        />
        <div class="form-check-inline">
          <input
            type="checkbox"
            id="image-<%= idx %>"
            name="deleteImages[]"
            value="<%= img.filename %>"
          />
        </div>
        <label for="image-<%= idx %>">Delete</label>
        <% }) %>
      </div>
      <div>
        <button class="btn btn-success" type="submit">Edit Campground</button>
      </div>
    </form>
    <a href="/campgrounds/<%= campground._id %>">Back To Campground</a>
  </div>
</div>
